{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/*.spec.ts"]
}
